#define macro

CC      = icpc
CFLAGS1  = -std=c++0x 
CFLAGS2  = -I/share/apps/openmpi-intel/1.6.4_hcoll/include -I/scratch/chengbin.wang/install/log4cpp/include -I/scratch/chengbin.wang/install/boost/include
LDFLAGS = -llog4cpp -lmpi -lmpi_cxx
LPFLAGS = -L/share/apps/openmpi-intel/1.6.4_hcoll/lib -L/scratch/chengbin.wang/install/log4cpp/lib -L/scratch/chengbin.wang/install/boost/lib

all: main clean

main: HW1.o Normality.o Scrubber.o Outlier.o Record.o Utils.o Logging.o
	$(CC) $(CFLAGS1) $(LDFLAGS) $(LPFLAGS) -o main HW1.o Normality.o Scrubber.o OutlierDetecter.o Record.o Utils.o Logging.o 

HW1.o: HW1.cpp 
	$(CC) $(CFLAGS1) $(CFLAGS2) HW1.cpp
Normality.o: Normality.cpp 
	$(CC) -c $(CFLAGS1) $(CFLAGS2) Normality.cpp
Scrubber.o: Scrubber.cpp 
	$(CC) -c $(CFLAGS1) $(CFLAGS2) Scrubber.cpp
OutlierDetecter.o: Outlier.cpp 
	$(CC) -c $(CFLAGS1) $(CFLAGS2) OutlierDetecter.cpp
Record.o: Record.cpp 
	$(CC) -c $(CFLAGS1) $(CFLAGS2) Record.cpp
Utils.o: Utils.cpp 
	$(CC) -c $(CFLAGS1) $(CFLAGS2) Utils.cpp
Logging.o: Logging.cpp
	$(CC) -c $(CFLAGS1) $(CFLAGS2) Logging.cpp

.PHONY: clean cleanest

clean:
	rm *.o

cleanest: clean
	rm Assignment_A